@page
@model Zirku.Server.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Zirku Server</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 600px;
            padding: 40px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .header h1 {
            color: #333;
            font-size: 32px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .header p {
            color: #666;
            font-size: 16px;
        }

        .status-card {
            background: #f7f9fc;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .status-card h3 {
            color: #333;
            font-size: 18px;
            margin-bottom: 12px;
        }

        .status-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #e1e8ed;
        }

        .status-item:last-child {
            border-bottom: none;
        }

        .status-label {
            color: #666;
            font-size: 14px;
        }

        .status-value {
            color: #333;
            font-weight: 600;
            font-size: 14px;
        }

        .endpoints {
            background: #f7f9fc;
            border-radius: 8px;
            padding: 20px;
        }

        .endpoints h3 {
            color: #333;
            font-size: 18px;
            margin-bottom: 12px;
        }

        .endpoint-item {
            background: white;
            padding: 12px;
            margin-bottom: 8px;
            border-radius: 6px;
            font-family: 'Courier New', monospace;
            font-size: 13px;
            color: #667eea;
        }

        .endpoint-item:last-child {
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üîê Zirku Authorization Server</h1>
            <p>OAuth 2.0 / OpenID Connect Server</p>
        </div>

        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="status-card">
                <h3>‚úÖ Sesi√≥n Activa</h3>
                <div class="status-item">
                    <span class="status-label">Usuario:</span>
                    <span class="status-value">@User.Identity.Name</span>
                </div>
                <div class="status-item">
                    <span class="status-label">Estado:</span>
                    <span class="status-value">Autenticado</span>
                </div>
            </div>

            <form method="post" action="/Account/Logout">
                <button type="submit" style="width: 100%; padding: 14px; background: #dc3545; color: white; border: none; border-radius: 8px; font-size: 16px; font-weight: 600; cursor: pointer;">
                    Cerrar Sesi√≥n
                </button>
            </form>
        }
        else
        {
            <div class="status-card">
                <h3>‚ùå Sin Sesi√≥n</h3>
                <div class="status-item">
                    <span class="status-label">Estado:</span>
                    <span class="status-value">No autenticado</span>
                </div>
            </div>

            <a href="/Account/Login" style="display: block; width: 100%; padding: 14px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 8px; font-size: 16px; font-weight: 600; text-align: center; text-decoration: none;">
                Iniciar Sesi√≥n
            </a>
        }

        <div class="endpoints" style="margin-top: 20px;">
            <h3>üì° Endpoints OAuth 2.0</h3>
            <div class="endpoint-item">GET /authorize</div>
            <div class="endpoint-item">POST /token</div>
            <div class="endpoint-item">POST /introspect</div>
        </div>
    </div>
</body>
</html>

